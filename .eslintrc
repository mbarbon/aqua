{
  "parser": "babel-eslint",
  "parserOptions": {
   "ecmaVersion":6,
   "sourceType":"module",
   "ecmaFeatures": {
     "jsx":true
   }
  },
  "rules": {
    "semi": ["error", "never"],
    "jsx-quotes": ["error","prefer-single"],
    "quotes": ["error","single"],
    "space-before-function-paren": ["error","always" ]
   }
}
